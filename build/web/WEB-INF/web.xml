<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>CheckSessionFilter</filter-name>
        <filter-class>filters.CheckSessionFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CheckSessionFilter</filter-name>
        <url-pattern>/pages/content.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>CheckSessionFilter</filter-name>
        <url-pattern>/pages/books.jsp</url-pattern>
    </filter-mapping>
    <listener>
        <description>ServletContextListener</description>
        <listener-class>listeners.ContextListener</listener-class>
    </listener>
    <listener>
        <description>ServletContextListener, HttpSessionListener</description>
        <listener-class>listeners.SessionListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>ImageShower</servlet-name>
        <servlet-class>servlets.ImageShower</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PdfContent</servlet-name>
        <servlet-class>servlets.PdfContent</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ImageShower</servlet-name>
        <url-pattern>/ImageShower</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PdfContent</servlet-name>
        <url-pattern>/PdfContent</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>400</error-code>
        <location>/errors/400.html</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/errors/404.html</location>
    </error-page>
    <jsp-config>
        <jsp-property-group>
            <display-name>header_and_footer</display-name>
            <url-pattern>/pages/*</url-pattern>
            <page-encoding>UTF-8</page-encoding>
            <include-prelude>/WEB-INF/jspf/header.jspf</include-prelude>
            <include-coda>/WEB-INF/jspf/footer.jspf</include-coda>
        </jsp-property-group>
    </jsp-config>
    <resource-ref>
        <res-ref-name>jdbc/PotratilNaEtoUze8Chasov</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
</web-app>
